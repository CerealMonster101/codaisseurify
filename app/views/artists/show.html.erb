<h1><%= @artist.name %></h1>

<%= image_tag @artist.image_url %>

<h2> List of Songs by <%= @artist.name %></h2>

<% if @artist.songs.any? %>
  <ul>
    <% @artist.songs.each do |song| %>
      <li><p><%= song.name %></p></li><
      <%= link_to "Delete Song from list", artist_song_path(@artist.id, song.id), method: :delete, data: {confirm: "Are you sure you want to delete this song?"} %>
      <% end %>
  </ul>
<% else %>
  <p>There are no songs in this artist.</p>
<% end %>
<hr>
